#include <bits/stdc++.h>
 
#define int long long
#define nn '\n'
typedef long long ll;
 
using namespace std;
 
inline void solve()
{
    int n;
    cin>>n;
    cout<<(n*n*n-n)/3-2;
}
int32_t main()
{
    ios_base::sync_with_stdio(false);
    cout.tie(nullptr);
    cin.tie(nullptr);
//    freopen("angle1.in", "r", stdin);
//    freopen("angle1.out", "w", stdout);
    int tc=1;
    //cin>>tc;
    while(tc--)
    {
        solve();
    }
    return 0;
}

