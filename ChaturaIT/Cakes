#include <bits/stdc++.h>
 
#define int long long
#define nn '\n'
typedef long long ll;
 
using namespace std;
int32_t main()
{
        ios_base::sync_with_stdio(false);
        cin.tie(0);
        cout.tie(0);
 
        int n,a,b;
        cin>>n>>a>>b;
        int ans=0;
        for(int i=1;i<n;i++)
        {
            ans=max(ans,min(a/i,b/(n-i)));
        }cout<<ans;
}

//Reference:https://codeforces.com/contest/911/problem/B
